<% layout('/layouts/boilerplate') %>
<div class="row mt-3 mb-3">
      <h2 class="col-6 offset-3">Signup for Wanderlust</h2>
      <div class="col-6 offset-3">
            <form action="/signup" method="POST" novalidate class="needs-validation">
                  <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control" name="username" required id="username">
                        <div class="valid-feedback">Looks good</div>
                  </div>
                  <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" name="email" required id="email">
                        <div class="invalid-feedback">Enter Email</div>
                  </div>
                  <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" name="password" required id="password">
                        <div class="invalid-feedback">Enter Password</div>
                  </div>
                  <button class="btn btn-dark">Signup</button>
            </form>
      </div>
</div>